{
  "name": "@mercury-js/core",
  "version": "1.3.5",
  "description": "Fully automated models and grpahql schema generator for your Apollo Server",
  "author": "Roshan K Gujarathi",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roshanreacts/mercury.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/common/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/common/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    }
  },
  "keywords": [
    "mongoose",
    "realmoose",
    "headless crm",
    "crm",
    "apollo graphql",
    "graphql"
  ],
  "scripts": {
    "prepublish": "rimraf dist && yarn build",
    "build": "rimraf dist && yarn build-server",
    "build-types": "tsc -b tsconfig.types.json",
    "build-server": "tsc -b tsconfig.esm.json tsconfig.cjs.json && cp ./lib/package-cjs.json ./dist/cjs/package.json && cp -r types ./dist/types",
    "test": "majestic"
  },
  "devDependencies": {
    "@jest/types": "^29.4.2",
    "@types/expect-puppeteer": "^5.0.2",
    "@types/graphql-fields": "^1.3.3",
    "@types/jest": "^26.0.20",
    "@types/jest-environment-puppeteer": "^5.0.3",
    "@types/lodash": "^4.14.168",
    "@types/node": "^15.0.1",
    "@types/puppeteer": "^7.0.4",
    "jest": "^26.6.3",
    "majestic": "^1.8.0",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@graphql-tools/merge": "^6.2.11",
    "graphql-fields": "^2.0.3",
    "graphql-scalars": "^1.10.0",
    "lodash": "^4.17.20",
    "mongoose": "^5.12.3",
    "mongoose-bcrypt": "^1.9.0",
    "mongoose-paginate-v2": "^1.4.1",
    "nconf": "^0.11.3"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "bugs": {
    "url": "https://github.com/roshanreacts/mercury/issues"
  },
  "homepage": "https://github.com/roshanreacts/mercury#readme",
  "directories": {
    "lib": "lib"
  }
}
